<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="360dp"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_icon"></ImageView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="αlphagram"></TextView>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:textColor="#868686"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="The best TG Social・Secure・Private"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="286dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_intro_btn"
            android:gravity="center"
            android:text="@string/ac_splash_btn_login"
            android:textColor="#ffffff"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:id="@+id/layout_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_tip"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/ac_splash_btn_register_tip"
                android:textColor="#4D4D4D"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/ac_splash_btn_register"
                android:textColor="#39AFEA"
                android:textSize="16sp"></TextView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>