<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    app:corner_radius="8dp"
    android:padding="12dp"
    android:id="@+id/rcl"
    tools:background_normal="@color/theme_color"
    android:layout_height="74dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Suggested"
        android:textStyle="bold"
        tools:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.00796602 ETH"
        tools:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_doller_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 1.35"
        android:layout_marginTop="8dp"
        tools:textColor="@color/white"
        android:textSize="14sp" />

</com.ruffian.library.widget.RConstraintLayout>