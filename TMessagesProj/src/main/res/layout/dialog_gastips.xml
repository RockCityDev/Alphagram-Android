<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/black">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_normal="@color/white"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        app:corner_radius="12dp">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/gas_tips_dialog_title"
            android:textStyle="bold"
            android:paddingVertical="9dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:icon_normal_right="@drawable/line_close"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:text="@string/gas_tips_dialog_content"
            android:textColor="#1a1a1d"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_bottom_tips"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/gas_tips_dialog_bottom_tips"
            android:textColor="#828283"
            android:textSize="15sp" />

    </com.ruffian.library.widget.RConstraintLayout>

</FrameLayout>