<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#F9F9F9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_save_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawablePadding="4dp"
                android:text="@string/vw_save_cache"
                android:textColor="@drawable/ic_toptab_selector_style"
                android:textSize="14sp"
                app:drawableBottomCompat="@drawable/ic_toptab_bottom_line" />

            <TextView
                android:id="@+id/tv_save_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="4dp"
                android:text="@string/vw_save_album"
                android:textColor="@drawable/ic_toptab_selector_style"
                android:textSize="14sp"
                app:drawableBottomCompat="@drawable/ic_toptab_bottom_line" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_mix_delete"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_state_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#F9F9F9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_download_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/vw_edit_cancel"
                android:textColor="#FF3838"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_download_select_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#61000000"
                android:textSize="14sp"
                tools:text="已选中1个文件"/>

            <TextView
                android:id="@+id/tv_download_checkall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/ac_downed_text_checkall"
                android:textColor="#69B1F2"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/download_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>