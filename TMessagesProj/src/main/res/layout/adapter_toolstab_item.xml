<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ruffian.library.widget.RView
        android:id="@+id/b_bg"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:background_normal="@drawable/bg_guanfangqunzu"
        app:corner_radius="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/b_bg"
        app:layout_constraintLeft_toLeftOf="@+id/b_bg"
        app:layout_constraintRight_toRightOf="@+id/b_bg"
        app:layout_constraintTop_toTopOf="@+id/b_bg"
        tools:src="@drawable/saomiaoerweima" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:textColor="#56565C"
        android:textSize="13sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/b_bg"
        app:layout_constraintRight_toRightOf="@+id/b_bg"
        app:layout_constraintTop_toBottomOf="@+id/b_bg"
        tools:text="扫描二维码" />
</androidx.constraintlayout.widget.ConstraintLayout>