<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical"
        app:background_normal="@color/white"
        app:corner_radius="4dp">

        <TextView
            android:id="@+id/tv_option_qrcode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_qrcode"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            app:corner_radius_top_left="4dp"
            app:corner_radius_top_right="4dp"
            tools:text="@string/homeoption_pop_qrcode" />

        <TextView
            android:id="@+id/tv_option_new_message"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/btn_create_new_message_sub_menu"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_createmsg" />

        <TextView
            android:id="@+id/tv_option_add_contact"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_add_contact"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_addfriend" />

        <TextView
            android:id="@+id/tv_option_new_group"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_new_group"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_creategroup" />

        <TextView
            android:id="@+id/tv_option_new_channel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_new_channel"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_createchannel" />

        <TextView
            android:id="@+id/tv_option_new_secret_chat"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_new_secret_chat"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_encryptedchat" />


        <TextView
            android:id="@+id/tv_option_relatedme"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableStart="@drawable/home_option_new_relateme"
            android:drawablePadding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="#1A1A1D"
            android:textSize="15sp"
            tools:text="@string/homeoption_pop_relatedme" />

    </com.ruffian.library.widget.RLinearLayout>
</com.ruffian.library.widget.RLinearLayout>