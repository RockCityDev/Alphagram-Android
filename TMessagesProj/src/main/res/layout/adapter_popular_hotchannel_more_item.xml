<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rfl"
    android:layout_width="120dp"
    android:layout_height="158dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:border_width_normal="1dp"
    app:corner_radius="5dp"
    app:border_color_normal="#e6e6e6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_more_channel_avatar1"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_explore_more"
            android:layout_marginStart="27dp"
            android:src="@drawable/logo_avatar"
            app:shapeAppearance="@style/circleImageStyle"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <com.ruffian.library.widget.RFrameLayout
            android:id="@+id/fl_more_channel_avatar2"
            app:background_normal="@color/white"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_explore_more"
            app:corner_radius="45dp"
            android:layout_width="45dp"
            android:layout_height="45dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_more_channel_avatar2"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/logo_avatar"
                app:shapeAppearance="@style/circleImageStyle"
                android:layout_width="42dp"
                android:layout_height="42dp"/>
        </com.ruffian.library.widget.RFrameLayout>

        <TextView
            android:id="@+id/tv_explore_more"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="@string/view_community_recommendtab_findandjoin"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_add_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_explore_more"
            tools:text="@string/view_community_recommendtab_findandjoin"
            android:textColor="#868686"
            android:textSize="11sp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_showall_channel"
            tools:text="@string/view_community_recommendtab_showall_recommend"
            app:corner_radius="5dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_tips"
            android:layout_marginTop="6dp"
            app:border_width_normal="1dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:text_color_normal="@color/theme_color"
            app:border_color_normal="@color/theme_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.ruffian.library.widget.RFrameLayout>